rule SunsetLightOn
when
	Item Sunset_Event received update ON
then
	sendCommand(LI_EG_AO, ON)
	sendNotification("e33b1711@gmail.com", "Sunset item update on.")
end

rule SunsetLightOff
when
	item Sunset_Event_p120 received update ON
then
	sendCommand(LI_EG_AO, OFF)
	sendNotification("e33b1711@gmail.com", "Sunset p120 item update on.")
end

